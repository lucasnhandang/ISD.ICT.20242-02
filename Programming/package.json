{
  "name": "aims",
  "version": "1.0.0",
  "description": "AIMS - An Internet Media Store",
  "scripts": {
    "start": "cd demo-react-frontend && npm start",
    "start-backend": "mvn spring-boot:run",
    "build-backend": "mvn clean package",
    "dev": "concurrently \"npm run start-backend\" \"npm run start\"",
    "install-demo": "cd demo-react-frontend && npm install",
    "demo-setup": "npm run install-demo",
    "clean": "mvn clean && rm -rf target/"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "java": ">=21"
  }
}
