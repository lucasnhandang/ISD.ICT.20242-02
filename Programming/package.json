{
  "name": "aims",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.8.0"
  },
  "build": {
    "appId": "com.hustict.aims",
    "productName": "AIMS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "pom.xml",
      "target/aims-0.0.1-SNAPSHOT.jar",
      "frontend/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
